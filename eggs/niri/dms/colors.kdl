layout {
    background-color "transparent"

    focus-ring {
        active-color   "#ffb599"
        inactive-color "#a08d86"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#ffb599"
        inactive-color "#a08d86"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#ffb599"
        inactive-color "#a08d86"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#ffb59980"
    }
}

recent-windows {
    highlight {
        active-color   "#71361d"
        urgent-color   "#ffb4ab"
    }
}