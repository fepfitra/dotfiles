    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "brightnessctl -q set 1%+",
        "on-scroll-down": "brightnessctl -q set 1%-"
    },
    "cpu": {
         "interval": 1,
          "format": "CPU {}% Ôãõ",
         "format-icons": [
              "<span color='#69ff94'>‚ñÅ</span>", // green
              "<span color='#2aa9ff'>‚ñÇ</span>", // blue
